#!/usr/bin/python

class CFPFlow:
    # default values

    class EndType:
        SQUARE = 1
        RECTANGLE = 2
        ROUNDED_SQUARE = 3
        ROUNDED_RECTANGLE = 4
        CIRCLE = 5
        ELLIPSE = 6
        UNFILLED_ARROW = 7
        FILLED_ARROW = 8
        CLASSIC_ARROW = 9

    flowEndType = Type.FILLED_ARROW
    flowFillColor = "steelblue"
    flowTextColor = "black"
    flowTextFont = "Monospace"
    flowTextFontSize = "20"
    flowBorderColor = "black"
    flowStrokeWidth = "10"
    flowStrokeDasharray = False
    flowStrokeDasharrayValue = ""

    flowEndStrokeWidth = "10"
    # The following two parameters define how the end type juts off the line for the flow
    flowEndShiftFromHorizontal = "30"
    flowEndRaiseFromVertical = "20"

    flowEndStrokeDasharray = False
    flowEndStrokeDasharrayValue = ""
