#!/usr/bin/python

class NodeStem:

    #default values
    def __init__ (self, stemFillColor="white", stemTextFontColor="black", stemTextFontSize="20",
                  stemBorderColor="black", stemStrokeWidth="2", stemStrokeDasharray = False, 
                  stemStrokeDasharrayValue=""):

        nodeStemFillColor = stemFillColor
        nodeStemTextColor = stemTextFontColor
        nodeStemTextSize = stemTextFontSize
        nodeStemBorderColor = stemBorderColor
        nodeStemStrokeWidth = stemStrokeWidth
        nodeStemStrokeDasharray = stemStrokeDasharray
        nodeStemStrokeDasharrayValue = stemStrokeDasharrayValue
